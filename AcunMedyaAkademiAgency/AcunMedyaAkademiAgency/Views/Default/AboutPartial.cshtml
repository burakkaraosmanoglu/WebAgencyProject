@model List<AcunMedyaAkademiAgency.Entities.About>
@{
    var count = 3;
}

<section class="page-section" id="about">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Hakkımızda</h2>
            <h3 class="section-subheading text-muted">Biz Kimiz?</h3>
        </div>
        <ul class="timeline">
            @foreach (var item in Model)
            {
                if (count % 3 == 0)
                {
                    <li>
                        <div class="timeline-image"><img class="rounded-circle" src="@item.ImageUrl" width="160px" height="160px" /></div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4 class="subheading">@item.Title</h4>
                            </div>
                            <div class="timeline-body"><p class="text-muted">@item.Description</p></div>
                        </div>
                    </li>
                }

                else
                {
                    <li class="timeline-inverted">
                        <div class="timeline-image"><img class="rounded-circle" src="@item.ImageUrl" width="160px" height="160px" /></div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4 class="subheading">@item.Title</h4>
                            </div>
                            <div class="timeline-body"><p class="text-muted">@item.Description</p></div>
                        </div>
                    </li>
                }

                count++;

            }
            <li class="timeline-inverted">
                <div class="timeline-image">
                    <h4>
                        Hikayemizin
                        <br />
                        Bir Parçası
                        <br />
                        Olun!
                    </h4>
                </div>
            </li>
        </ul>
    </div>
</section>