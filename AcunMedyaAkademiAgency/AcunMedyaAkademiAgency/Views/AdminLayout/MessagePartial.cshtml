@model List<AcunMedyaAkademiAgency.Entities.Message>

<div class="dropdown-menu navbar-dropdown navbar-dropdown-large preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach(var item in Model)
    { 
    <a class="dropdown-item preview-item">
        <div class="preview-item-content flex-grow">
            <span class="badge badge-pill badge-success">Mesaj</span>
            <p class="text-small text-muted ellipsis mb-0">  @item.Title </p>
            <p class="text-small text-muted ellipsis mb-0">  @item.NameSurname , @item.Email </p>
            <p class="text-small text-muted ellipsis mb-0">@item.Description</p>
        </div>
        <p class="text-small text-muted align-self-start"> @item.SendDate </p>
    </a>
   
   
    }
    <h6 class="p-3 mb-0">See all activity</h6>
</div>
