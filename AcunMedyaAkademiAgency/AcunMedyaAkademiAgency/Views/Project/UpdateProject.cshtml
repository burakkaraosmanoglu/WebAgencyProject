@model AcunMedyaAkademiAgency.Entities.Project
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Güncelleme</h4>
            <p class="card-description">Güncelleme işlemlerini buradan yapabilirsiniz.</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">ID</label>
                    @Html.TextBoxFor(x => x.ProjectID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Adı</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>


                <div class="form-group">
                    <label for="exampleInputCity1">Proje Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                </div>
                
                <button type="submit" class="btn btn-primary mr-2"> Güncelle </button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>