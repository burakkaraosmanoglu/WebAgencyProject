@model List<AcunMedyaAkademiAgency.Entities.Service>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>Hizmetler Listesi</h2>

<div class="col-lg-12 grid-margin stretch-card">
    <head>
        <style>
            .table {
                width: 100%;
            }

                .table th,
                .table td {
                    word-wrap: break-word; /* Uzun kelimeleri kır */
                    white-space: normal; /* Metnin hücre içinde kalmasını sağla */
                    text-align: center; /* Hücre içeriğini ortala (isteğe bağlı) */
                    vertical-align: middle; /* Dikey olarak hizala */
                }

                    .table td:nth-child(3) { /* Açıklama sütunu için özel genişlik */
                        max-width: 250px; /* Genişliği belirli bir değerle sınırla */
                        overflow: hidden; /* Taşan içeriği gizle */
                        text-overflow: ellipsis; /* Uzun metni üç nokta ile kısalt */
                    }

            img {
                border-radius: 50%; /* Resimleri yuvarlak hale getir */
                width: 50px; /* Resimlerin boyutunu ayarla */
                height: 50px;
                object-fit: cover; /* Resmin bozulmadan sığmasını sağla */
            }
        </style>
    </head>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmetlerinizi Buradan Ekleyebilirsiniz.</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adı</th>
                            <th>Resmi</th>
                            <th>Açıklaması</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td><img src="@item.ImageUrl" style=75px; height:75px; alt="Hizmet Görseli" /></td>
                                <td>@item.Description</td>
                                <td><a class="btn btn-danger" href="/Service/DeleteService/@item.ServiceID"><i class="fa fa-trash"></i>Sil</a></td>
                                <td><a class="btn btn-success" href="/Service/UpdateService/@item.ServiceID"><i class="fa fa-pencil">Güncelle</i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Service/CreateService" class="btn btn-info"><i class="mdi mdi-file-check btn-icon-append"></i>Yeni Hizmet Girişi </a>
            </div>
        </div>
    </div>
</div>





